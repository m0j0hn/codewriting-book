<parameters>
	<key>scratch.location.path</key>
	<label>scratch location</label>
	<type>string</type>
	<attributes>
		<description>The path to which we should save temporary files
used in the build process, relative to the product
root or as an absolute path with leading `/`.
Accepts the tokens `{{ output-type }}` and
`{{ environment }}`.
</description>
		<required>false</required>
		<required-caveat />
		<default-value>_scratch</default-value>
	</attributes>
	<example>
